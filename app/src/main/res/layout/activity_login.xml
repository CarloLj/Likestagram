<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_list"
    android:id="@+id/layout">

    <ImageView
        android:layout_marginTop="200dp"
        android:id="@+id/ivTitle"
        android:layout_width="200dp"
        android:layout_height="66.6dp"
        android:background="@drawable/nux_dayone_landing_logo"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etUser"
        android:layout_below="@id/ivTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:paddingTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Username"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_below="@id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:paddingTop="20dp"
        android:hint="Password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSign"
        android:layout_below="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:text="@string/sign_in"
        android:onClick="onLogin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnLogUp"
        android:layout_below="@id/btnSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:text="@string/sign_up"
        android:onClick="onLogUp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
</RelativeLayout>